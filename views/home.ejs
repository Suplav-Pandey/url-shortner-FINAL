<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL SHORTENER</title>
</head>
<body>
    <h1>THE URL SHORTENER</h1>
    <hr>
    <hr>
    <form action="/user/register" method="post"><button>REGISTER</button></form>
    <form action="/user/login" method="get"><button>LOGIN</button></form>
    <hr>
    <% if (locals.shortUrl) { %>
        <h3>The short URL generated is: <%= locals.shortUrl %></h3>
    <% } %>
    <div>
        <h3>GENERATE SHORT URL</h3>
        <form action="/url/generateUrl" method="post">
            <label>Enter original URL: </label>
            <input type="text" placeholder="http://example.com" name="orignalUrl">
            <button type="submit">Generate</button>
        </form>
    </div>
    <hr><hr>
    <div>
        <h3>CREATED URLS</h3>
        <% if (locals.URl && locals.URl.length > 0) { %>
            <table border="1" cellspacing="10">
                <thead>
                    <tr>
                        <th>S.No</th>
                        <th>OriginalUrl</th>
                        <th>ShortUrl</th>
                        <th>Clicks</th>
                    </tr>
                </thead>
                <tbody>
                    <% let count = 0; %>
                    <% locals.URl.forEach(url => { %>
                        <% count++; %>
                        <tr>
                            <td><%= count %></td>
                            <td><%= url.orignalUrl %></td>
                            <td><%= url.shortUrl %></td>
                            <td><%= url.clicks %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <p>NO URL FOUND.</p>
        <% } %>
    </div>
</body>
</html>